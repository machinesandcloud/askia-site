{% if page.testimonials %}
<section class="section">
  <div class="container">
    <div class="testimonial-wall-header">
      <h2 class="section-title section-title-glow">{{ page.testimonials.title }}</h2>
      {% if page.testimonials.subtitle %}<p class="section-subtitle">{{ page.testimonials.subtitle }}</p>{% endif %}
    </div>
    <div class="testimonial-grid">
      {% for index in page.testimonials.indexes %}
        {% set item = testimonials.items[index] %}
        {% if item %}
        <article class="testimonial-card">
          <div class="testimonial-header">
            <img class="avatar" src="{{ item.photo }}" alt="{{ item.name }}" />
            <div>
              <strong>{{ item.name }}</strong>
              <span class="section-subtitle">
                {{ item.role }}
                {% if item.company and item.logo %}
                  <span class="company-line"><span class="company-sep">·</span><img class="company-logo" src="{{ item.logo }}" alt="{{ item.company }} logo" />{{ item.company }}</span>
                {% elseif item.company %}
                  · {{ item.company }}
                {% endif %}
              </span>
              {% if item.rating %}<div class="rating">{{ "★" | repeat(item.rating) }}</div>{% endif %}
            </div>
          </div>
          <p>{{ item.quote }}</p>
        </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

